@model ContatoModel
@{
    ViewData["Title"] = "Confirmacao apagar contato.";
}

<div class="text-center">
    <h3>Deseja realmente apagar o contato (@Model.Nome)</h3>
</div>
<div class="d-grid gap-2">
    <a class="btn btn-primary btn-block" asp-route-id="@Model.Id" asp-controller="Contato" asp-action="Apagar">Confirmar</a>
    <a class="btn btn-secondary btn-block" asp-controller="Contato" asp-action="Index">Cancelar</a>
</div>